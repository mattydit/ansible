[Unit]
Description=Kafka
After=network.target

[Service]
User=root
Group=root
Environment="KAFKA_OPTS=-javaagent:/etc/prometheus/jmx_prometheus_javaagent-0.19.0.jar=7071:/etc/prometheus/kafka-2_0_0.yml"
ExecStart={{ kafka_dir }}/bin/kafka-server-start.sh {{ kafka_dir }}/config/server.properties
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target
